@*@page "{MedicalPersonId:int}"*@
@page
@using Data.Models
@Html.AntiForgeryToken()
@model VaccinationTrackerWebApp.Pages.VaccinationHistoryModel
@{
    ViewData["Title"] = "Vaccination History";
}

<div class="row">
    <div class="col-sm-12">
        <h3> @Model.MedicalPersonData.FirstName @Model.MedicalPersonData.LastName - @Model.MedicalPersonData.Profession</h3>
        <div class="text-muted">@Model.MedicalPersonData.Address , @Model.MedicalPersonData.Postcode, Tel: @Model.MedicalPersonData.Telephone</div>
    </div>
</div>

<div class="row padBottom30">
    <div class="col-sm-12" style="text-align: right;">
        <a asp-page="VaccinatePatient" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
</div>

<div class="alert alert-primary" role="alert" style="font-weight: bold;">
    <h5>Vaccination History</h5>
    Total Number of Vaccinations: @Model.TotalMedicalPersonVaxData
</div>

<table class="table table-striped table-hover">
    <colgroup></colgroup>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date & Time</th>
            <th scope="col">Vaccination Centre</th>
            <th scope="col">Patient Name</th>
            <th scope="col">Vaccination Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (VaccinationHistoryData item in Model.VaccinationHistoryData) {
        <tr>
            <td>@item.RowNum</td>
            <td>@item.DateTime</td>
            <td>@item.VaccinationCentre</td>
            <td>@item.PatientName</td>
            <td>@item.VaccinationType</td>
        </tr>
        }
    </tbody>
</table>

