@page
@Html.AntiForgeryToken()
@using Data.Models
@model VaccinationTrackerWebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div id="divLoginMessage"></div>
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-sign-in-alt"></i> Login</h3>
            </div>
            <div class="card-body">
                <form id="formLogin" method='POST'>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <select id="txtUsername" name="txtUsername" class="form-select" aria-label="select user">
                            <option selected value="" disabled="disabled">-- Select Administrator --</option>
                            <option value="DemoAdministrator">Demo Administrator</option>
                            <option disabled="disabled"></option>
                            <option disabled="disabled">-- Select Vaccinator --</option>
                            @foreach (LoginData item in Model.LoginData)
                            {
                                <option value="@item.MedicalPersonId">@item.Username</option>
                            }
                        </select>
                    </div>
                    <div class="form-group" style="margin-top: 10px;">
                        <label for="username">Password</label>
                        <input type="password" name="txtPassword" class="form-control" disabled value="*******">
                    </div>
                    <div class="form-group" style="margin-top: 20px;">
                        <button type="submit" value="send" class="btn btn-primary btn-block"><i class="fas fa-sign-in-alt"></i> Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section MyScriptsSection{
    <script src="~/js/Request.js" asp-append-version="true"></script>
    <script src="~/js/Login.js" asp-append-version="true"></script>
}